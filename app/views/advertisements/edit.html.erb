<h1> Edit Advertisement</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
      <div class="form-group">
      <%= f.label  :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter title name" %>
      </div>

      <div class="form-group">
      <%= f.label :copy %>
      <%= f.text_area :copy, class: 'form-control', placeholder: 'Enter Copy' %>
      </div>

      <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price, class: 'form-control', placeholder: 'Enter Price' %>
      </div>

      <div class="form-group">
      <%= f.submit "Update", class: 'btn btn-sucess' %>
      </div>
    <% end %> 
  </div>
</div>